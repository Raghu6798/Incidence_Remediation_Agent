# DevOps Agent Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/devops_agent.log

# Enable console logging
LOG_CONSOLE=true

# Enable file logging
LOG_FILE_ENABLED=true

# Log rotation (size or time)
LOG_ROTATION=10 MB

# Log retention period
LOG_RETENTION=30 days

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Google API Key for Gemini models
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter API Key for OpenAI models
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Claude API Key
CLAUDE_API_KEY=your_claude_api_key_here

# Cerebras API Key for Llama models
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Mistral API Key
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default model to use
DEFAULT_MODEL=gemini-2.5-flash

# Default temperature for model inference (0.0 to 2.0)
DEFAULT_TEMPERATURE=0.4

# Default maximum tokens for model inference
DEFAULT_MAX_TOKENS=4096

# Default timeout for API calls in seconds
DEFAULT_TIMEOUT=30

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================

# GitHub Personal Access Token
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# GitHub API base URL
GITHUB_API_BASE_URL=https://api.github.com

# GitHub API timeout in seconds
GITHUB_API_TIMEOUT=30

# GitHub API rate limit warning threshold
GITHUB_RATE_LIMIT_WARNING=100

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent name
AGENT_NAME=DevOps Incident Response Agent

# Agent version
AGENT_VERSION=1.0.0

# Maximum number of concurrent sessions
MAX_CONCURRENT_SESSIONS=10

# Session timeout in seconds
SESSION_TIMEOUT=300

# Enable debug mode for development
ENABLE_DEBUG_MODE=false

# =============================================================================
# NESTED CONFIGURATION EXAMPLES
# =============================================================================

# You can also use nested configuration with double underscores:
# LOGGING__LOG_LEVEL=DEBUG
# LLM__GOOGLE_API_KEY=your_key_here
# GITHUB__GITHUB_PERSONAL_ACCESS_TOKEN=your_token_here

# =============================================================================
# ENVIRONMENT-SPECIFIC CONFIGURATION
# =============================================================================

# For production, you might want to override some settings:
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# DEBUG=false
# LOG_CONSOLE=false
# LOG_FILE_ENABLED=true
# LOG_ROTATION=100 MB
# LOG_RETENTION=90 days

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT: Never commit your actual .env file to version control
# This file contains sensitive information like API keys and tokens
# 
# Best practices:
# 1. Keep this env.example file in version control
# 2. Add .env to your .gitignore file
# 3. Use different API keys for different environments
# 4. Rotate your API keys regularly
# 5. Use the minimum required permissions for your tokens 